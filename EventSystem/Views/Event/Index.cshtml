@model EventViewModel
@{
    var cateogires = ViewBag.Categories;
}
<form method="post" asp-action="AddEvents" asp-controller="Event" asp-area="">
    <div class="form-group" >
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" placeholder="Enter event name" maxlength="100" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Details"></label>
        <textarea asp-for="Details" class="form-control" placeholder="Enter event details" rows="4"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" class="form-control" type="datetime-local" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" class="form-control" type="datetime-local" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" class="form-control">
            <option value="">Select a category</option>
            @foreach (var category in @cateogires)
            {
                <option value="@category.Id">@category.CatogryName</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="SupervisorName"></label>
        <input asp-for="SupervisorName" class="form-control" placeholder="Enter event name" maxlength="100" />
        <span asp-validation-for="SupervisorName" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
<script src="~/lib/jquery/dist/jquery.js"></script>
